{% block list_thead %}
{{ echo_block("list_thead") }}
<thead>
    {{ echo_block("list_thead_rows") }}
    <tr class="list_thead">
        {% if batch_actions|default is not empty %}
            <th class="list_thead_batch_action">
                <input type="checkbox" name="batchAll" />
            </th>
        {% endif %}
    {% for column in builder.columns -%}
        {% if column.groups is not empty %}
        {{ echo_set('columnGroups', echo_twig_arr(column.groups), false) }}
        {{ echo_if('groups is empty or columnGroups|intersect(groups) is not empty') }}
        {% endif %}

        {{ echo_block('list_thead_column_' ~ column.name) -}}
        <th class="list_thead_column{{ echo_if (column.isSortable) }} sortable{{ echo_if ("sortColumn == '" ~ column.sortOn ~ "' and sortOrder == 'ASC'") }} sort_asc{{ echo_elseif ("sortColumn == '" ~ column.sortOn ~ "' and sortOrder == 'DESC'") }} sort_desc{{ echo_endif () }}{{ echo_endif () }}">
            <span class="sort-addon">
            {% if column.isSortable -%}
                {{ echo_if ("sortColumn == '" ~ column.sortOn ~ "' and sortOrder == 'ASC'") }}
                    <a href="?sort={{ column.sortOn }}&order_by=desc">
                {{ echo_else() }}
                    <a href="?sort={{ column.sortOn }}&order_by=asc">
                {{ echo_endif () }}
            {%- endif -%}
                    {{ echo_twig("'" ~ column.label|addslashes ~ "'|trans({}, '" ~ i18n_catalog|default("Admin") ~ "')") }}
            {%- if column.isSortable -%}
                    </a>
                {{ block('sort_icon') }}
            {% endif -%}
            </span>
        </th>
        {{ echo_endblock() }}

        {% if column.groups is not empty %}
        {{ echo_endif() }}
        {% endif %}
    {% endfor -%}

    {%- if object_actions|default is not empty %}
    {{ echo_block("list_thead_actions") }}
        <th class="actions">{{ echo_trans('list.header.actions') }}</th>
    {{ echo_endblock() }}
    {% endif -%}
    </tr>
    {{ echo_endblock() }}
</thead>
{{ echo_endblock() }}
{% endblock %}

{% block sort_icon %}
{{ echo_if ("sortColumn == '" ~ column.sortOn ~ "'") }}
    {{ echo_if ("sortColumn == '" ~ column.sortOn ~ "' and sortOrder == 'ASC'") }}
        {% if column.sortType == 'alphabetic' %}
            <i class="fa fa-sort-alpha-asc active"></i>
            <i class="fa fa-sort-alpha-desc hover"></i>
        {% elseif column.sortType == 'numeric' %}
            <i class="fa fa-sort-numeric-asc active"></i>
            <i class="fa fa-sort-numeric-desc hover"></i>
        {% else %}
            <i class="fa fa-sort-amount-asc active"></i>
            <i class="fa fa-sort-amount-desc hover"></i>
        {% endif %}
    {{ echo_else() }}
        {% if column.sortType == 'alphabetic' %}
            <i class="fa fa-sort-alpha-asc hover"></i>
            <i class="fa fa-sort-alpha-desc active"></i>
        {% elseif column.sortType == 'numeric' %}
            <i class="fa fa-sort-numeric-asc hover"></i>
            <i class="fa fa-sort-numeric-desc active"></i>
        {% else %}
            <i class="fa fa-sort-amount-asc hover"></i>
            <i class="fa fa-sort-amount-desc active"></i>
        {% endif %}
    {{ echo_endif () }}
{{ echo_else() }}
    {% if column.sortType == 'alphabetic' %}
        <i class="fa fa-sort-alpha-asc placeholder hover"></i>
    {% elseif column.sortType == 'numeric' %}
        <i class="fa fa-sort-numeric-asc placeholder hover"></i>
    {% else %}
        <i class="fa fa-sort-amount-asc placeholder hover"></i>
    {% endif %}
{{ echo_endif () }}
{% endblock %}