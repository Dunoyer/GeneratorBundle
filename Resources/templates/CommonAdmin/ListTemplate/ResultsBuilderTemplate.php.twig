{% use '../CommonAdmin/ListTemplate/nbresults.php.twig' %}
{% use '../CommonAdmin/ListTemplate/thead.php.twig' %}
{% use '../CommonAdmin/ListTemplate/tbody.php.twig' %}
{% use '../CommonAdmin/ListTemplate/paginator.php.twig' %}
{% use '../CommonAdmin/generic_actions.php.twig' %}
{% use '../CommonAdmin/batch_actions.php.twig' %}

{%- block list_results -%}
<div class="row-fluid results-list">
    {{- block('list_nbresults') -}}

    {{- block('form_batch_actions') }}

    <div class="list-table-outer-wrapper">
        <div class="list-table-inner-wrapper">
            <table id="table-list-{{ builder.ModelClass }}" class="table table-striped table-hover table-condensed object-actions-{{ builder.ModelClass }}">
                {{ block('list_thead') -}}
                {{- block('list_tbody') }}
            </table>
        </div>
    </div>
    
    <div class="list-actions-wrapper hidden-print">
        <div class="list-actions form-actions">
            {{ echo_block("batch_actions_wrapper") }}
        {% if batch_actions|default is not empty %}
            <div id="batch_actions" class="pull-left btn-toolbar" role="toolbar">
                {{ block('batch_actions') }}
            </div>
        {% endif -%}
        {{ echo_endblock() }}

        {{ echo_block("generic_actions_wrapper") }}
        {% if actions|default is not empty %}
            <div id="generic_actions" class="pull-left btn-toolbar" role="toolbar">
                {{ block('generic_actions') -}}
            </div>
        {% endif -%}
        {{ echo_endblock() }}

        {{ echo_block("pagination_wrapper") }}
            <div class="pull-right btn-toolbar" role="toolbar">
                {{- block('list_paginator_perpage') -}}
            </div>

            <div class="pull-right btn-toolbar" role="toolbar">
                {{- block('list_paginator_pages') -}}
            </div>

            <div class="clearfix"></div>
        {{ echo_endblock() }}
        </div>
    </div>
        
    {{- block('endform_batch_actions') }}
</div>
{% endblock list_results %}
